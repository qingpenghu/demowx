/**index.wxss**/
.container{
  background-color: #fff;
  display: block;
}
.swiper{
  width: 750rpx;
  position: relative;
}
.swiper_box{
  width: 100%;
  height:360rpx;
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:360rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}
.search_view{
  position:fixed;
  left:0;
  right:0;
  top:0;
  z-index:500;
  width: 100%;
  height: 100rpx;
  background: gray;
  display: flex;
  flex-direction: column;
}
.search_content{
   background: white;
   width:650rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
   padding-top: auto;
   padding-left: 20rpx;
   padding-bottom: auto;
   margin: auto;
   height: 70rpx;
   border-radius:5px 5px;
}
.search_icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search_input{
  width: 500rpx;
  font-size: 28rpx;
}
.search_btn{
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color:blueviolet;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color:#fff;
  border:none;
  position: relative;
}
.all_good_title{
  width:690rpx;
  height:50rpx;
  padding:30rpx 30rpx 0 30rpx;
  font-size:36rpx;
  text-algin:left;
}
.recommend{
  width:750rpx;
}
.recommend .good_box {
  display: flex;
  flex-wrap: nowrap;
  box-sizing: content-box;
  padding: 30rpx;
  border-bottom: 1px solid #F0F0F0;
}
.good_box .image_box{
  width: 220rpx;
  height: 220rpx;
}
.image_box .image{
  width: 100%;
  height:100%;
}
.good_box .good_detail{
  width: 470rpx;
  height: 180rpx;
  padding: 20rpx 0 20rpx 20rpx;
  color:#666666;
}
.good_box .good_detail text{
  color:#F66E6E;
}
.good_detail .good_title{
  width: 450rpx;
  height: 85rpx;
  font-size: 35rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  word-break: break-all;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.good_detail .good_price {
  font-size: 30rpx;
  margin-top:10rpx;
  line-height: 40rpx;
  color: #F66E6E;
}
.good_detail .good_num{
  margin-top:10rpx;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.loading{
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}
  #ddr{
      margin: 1rpx auto;
      width: 160rpx;
      height: 30rpx;
  }
  .ddr_info{
      float: left;
      width: 100rpx;
      font-size: 20rpx;
      color: #ccc;
      line-height: 30rpx;
  }
  .ddr{
      width: 6rpx;
      height: 30rpx;
      float: left;
      margin: 2rpx;
      background-color: #ccc;
      animation: loading 1s infinite ease-in-out;/*animation：动画名称 持续时间 动画速度曲线 延迟 执行多少次 是否正反方向轮流播放*/
  }
  .ddr2{
      animation-delay: -0.9s;/*定义开始执行的地方，负号表示直接从第900ms开始执行*/
  }
  .ddr3{
      animation-delay: -0.8s;
  }
  .ddr4{
      animation-delay: -0.7s;
  }
  .ddr5{
      animation-delay: -0.6s;
  }
  @keyframes loading {
      0%,40%,100%{ /*定义每帧的动作*/
          -webkit-transform: scaleY(0.5);
      }
      20%{
          -webkit-transform: scaleY(1);
      }
  }