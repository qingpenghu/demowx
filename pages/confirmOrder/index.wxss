
.address_select{
    width: 699rpx;
    display: flex;
    flex-wrap: nowrap;
    padding:20rpx 26rpx;
    font-size: 26rpx;
    justify-content: center;
    border-top: 2rpx solid #ededed;
    border-bottom: 10rpx solid #ededed;
}
.address_select view{
    flex:1;
    height: 40rpx;
    line-height: 40rpx;
}
.address_select .select {
    color:#c3c3c5;
    text-align: right;
    padding-right: 30rpx;
}
.address_select .text{
  width: 18rpx;
  height: 18rpx;
  position: absolute;
  top:40rpx;
  border-left: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  -webkit-transform: translate(0,-50%) rotate(-135deg);
  transform: translate(0,-50%) rotate(-135deg);
}
.good_info {
    width: 100%;
    font-size: 26rpx;
}
.business_name{
    width: 100%;
    text-indent: 26rpx;
    line-height: 60rpx;
    border-bottom: 2rpx solid #f7f7f7;
}
.goods_message{
    display: flex;
    flex-wrap: nowrap;
    box-sizing: content-box;
    justify-content: space-between;
    padding: 30rpx 26rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f7f7f7;

}
.goods_message .good_image image{
    width: 164rpx;
    height: 164rpx;
}
.goods_message .good_content{
    width: 510rpx;

}
.good_content .good_title {
    height: 80rpx;
    font-size: 30rpx;
    line-height: 40rpx;
    margin-bottom: 25rpx;
    margin-top: 15rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    word-break: break-all;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}
.good_content .good_point {
    display: flex;
    flex-wrap: nowrap;
    box-sizing: border-box;
    justify-content: space-between;
    color: #7c7c7c;
}
.good_point text{
    color: #f66f6f;
    font-size: 30rpx;
}
.buy_info {
    padding: 30rpx 26rpx;
    display: flex;
    flex-wrap: nowrap;
    box-sizing: border-box;
    justify-content: space-between;
    font-size: 26rpx;
    border-bottom: 2rpx solid #f7f7f7;
}
.buy_info .piont_color  {
    color: #7c7c7c;
}
.payNumber {
    padding: 30rpx 26rpx;
    font-size: 26rpx;
    text-align: right;
    border-bottom: 6rpx solid #f7f7f7;
}
.payNumber .piont_color {
    color: #f66f6f;
}
.pay_type{
    width: 100%;
}
.pay_type .pay_item {
    display: flex;
    flex-wrap: nowrap;
    box-sizing: border-box;
    padding: 20rpx 26rpx;
    justify-content: space-between;
    border-bottom: 4rpx solid #f0f0f0
}
.pay_item .pay_icon {
    width: 96rpx;
    height: 96rpx;
}
.pay_item .pay_icon image{
    width: 96rpx;
    height: 96rpx;
}
.pay_checked{
    line-height: 96rpx;
}

.bottom {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    font-size: 26rpx;
    text-align: center;
    box-sizing: border-box;
    border-top: 1px solid #e7e7e7;
    font-size: 30rpx;
}
.bottom view{
    flex:4;
    height: 120rpx;
    line-height: 120rpx;
}
.bottom .submit {
    flex:3;
    background: #f66f6f;
}