@import "/wxParse/wxParse.wxss";
.goodDetail view{
    overflow: initial;
}
.swiper{
    width: 750rpx;
    position: relative;
  }
  .swiper_box{
    width: 100%;
    height:660rpx;
  }
  swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height:660rpx;
  }
  .swiper-container .dots{  
    position: absolute;  
    left: 0;  
    right: 0;  
    bottom: 20rpx;  
    display: flex;  
    justify-content: center;  
  }  
  .swiper-container .dots .dot{  
    margin: 0 8rpx;  
    width: 14rpx;  
    height: 14rpx;  
    background: #fff;  
    border-radius: 50%;  
    transition: all .6s;  
    opacity: .5;
  }  
  .swiper-container .dots .dot.active{  
    width: 14rpx;  
    opacity: 1;
  }
  .good_content {
      padding: 30rpx 20rpx 0 20rpx;
      font-size: 26rpx;
      border-bottom: 10rpx solid rgba(231, 231, 231, 0.2);
  }
  .name {
    width: 710rpx;
    max-height: 100rpx;
    font-size: 35rpx;
    line-height: 50rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    word-break: break-all;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .good_info{
    /* width: 710rpx;
    height: 50rpx;
    line-height: 50rpx; */
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    line-height: 80rpx;
    color: #6d6a71;
    /* border-bottom: 2rpx solid #f0f0f0; */
  }
  .good_info .point {
      width: 400rpx;
  }
  .good_info .point text{
      color: #f66f6f;
  }
  .good_info .point .point_number {
    font-size: 32rpx;
  }
  .good_info .point .stock {
      color:#6d6a71;
      text-indent: 20rpx;
  }
  .good_info .sales{
      width: 200rpx;
      text-align: right;
  }
  .sales .saleNum {
      color: #f66e6e;
  }
  .good_content .select {
      line-height: 60rpx;
  }
  .good_content .safeguard {
      height: 45rpx;
      padding-bottom: 15rpx;
      display: flex;
      flex-wrap: nowrap;
      justify-content: flex-start;
      font-size: 20rpx;
  }
  .safeguard_item {
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
    margin-right: 20rpx;
    line-height: 40rpx;
  }
  .safeguard_item image{
    width:25rpx;
    height: 25rpx;
    margin: 9rpx 6rpx 0 0;
  }
  .good_main {
      width: 670rpx;
      font-size: 26rpx;
      padding: 0 40rpx;
  }
  .address{
      display: flex;
      flex-wrap: nowrap;
      justify-content: space-between;
      padding-top: 20rpx;
      /* text-indent: 40rpx; */
  }
  .text_color{
      color: #666666;
      height: 60rpx;
      line-height: 60rpx;
  }
  .right{
    align-items: flex-end;
    line-height: 60rpx;
    height: 60rpx;
  }
  .main{
      flex:1;
      display: flex;
      flex-wrap: wrap;
  }
  .address_info{
      width: 100%;
      line-height: 60rpx;
  }
  .good_sales{
      height: 40rpx;
  }
  .common_view{
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    line-height: 60rpx;
  }
  .common_view .view_content {
      flex: 1;
  }
  .bottom_stance{
      width: 100%;
      height: 120rpx;
  }
  .good_bottom{
        width: 100%;
        height: 120rpx;
        font-size: 30rpx;
        position: fixed;
        bottom: 0;
        left:0;
        display: flex;
        flex-wrap: nowrap;
        box-sizing: border-box;
        border-top: 2rpx solid #f1f1f1;
        background: #fff;
    }
    .cancel {
        flex:5;
        text-indent: 30rpx;
        line-height: 120rpx;
        overflow: hidden;
    }
    .confirm{
        flex: 3;
        text-align: center;
        line-height: 120rpx;
        background: #f66e6e;
        overflow: hidden;
    }
    .fictitious_good_main {
        width: 710rpx;
        padding: 30rpx 20rpx;
        color: #808080;
        font-size: 24rpx;

    }
    .fictitious_good_main .notice {
        line-height: 50rpx;
        font-size: 28rpx;
    }
    .fictitious_good_main .redNum {
        line-height: 50rpx;
        color: #f66e6e;
    }
    .fictitious_good_main .notice_detail {
        line-height: 40rpx;
    }
    .good_introduce {
        width: 710rpx;
        height: 80rpx;
        padding: 20rpx;
        text-align: center;
        font-size: 30rpx;
        display: flex;
        flex-wrap: nowrap;
        justify-content: center;
        align-items: center;
        box-sizing: content-box;
    }
    .good_introduce .introduce_left {
        flex:7;
        height:2rpx;
        background: #000;
    }
    .introduce_content{
        flex: 6;
        transform:skewX(-45deg);
        -webkit-transform: skewX(-45deg);
        border-left: 2rpx solid #000;
        border-right: 2rpx solid #000;
    }
    .introduce_content view{
        transform: skewX(45deg)
    }
